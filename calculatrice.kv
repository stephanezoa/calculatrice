<Button>
   
    background_normal: ''
    size_hint: (0.2 , 0.2)
    background_color:(90/255 , 100/255 , 205/255 ,1)
<CalcuWidget>
    BoxLayout:
        orientation: "vertical"
        size: root.width , root.height

        TextInput:
            id: input_text
            foreground_color: (1,1,1,1)
            background_color:(28/255 , 20/255,30/255 ,1)
            text: "0"
            font_size:43
            multiline: False
            halign: "left"
            size_hint:(1,0.19)
        GridLayout:
        
            cols:4
            rows:5

########## row 1 ############
            Button:
                text: "C"
                font_size: 32
                on_press: root.clear()
            Button:
                text: "( )"
                font_size: 32
            Button:
                text: "<--"
                font_size: 32
                on_press: root.remove()
            Button:
                on_press: root.signe("/")
                text: "/"
                font_size: 32
                background_color: (54/255 , 173/255 , 176/255)
        ############### row 2 ############
            Button:
                text: "7"
                font_size: 32
                on_press: root.Button_value(7)
            Button:
                text: "8"
                font_size: 32
                on_press: root.Button_value(8)
            Button:
                text: "9"
                font_size: 32
                on_press: root.Button_value(9)
            Button:
                text: "X"
                on_press: root.signe("*")
                font_size: 30
                background_color: (54/255 , 173/255 , 176/255)

        ########## row 3 ########3
            Button:
                text: "4"
                font_size: 30
                on_press: root.Button_value(4)
            Button:
                text: "5"
                font_size: 30
                on_press: root.Button_value(5)
            Button:
                text: "6"
                font_size: 30
                on_press: root.Button_value(6)
            Button:
                text: "-"
                on_press: root.signe("-")
                font_size: 30
                background_color: (54/255 , 173/255 , 176/255)

        ############## row 4 ##########
            Button:
                text: "1"
                font_size: 30
                on_press: root.Button_value(1)
            Button:
                text: "2"
                font_size: 30
                on_press: root.Button_value(2)
            Button:
                text: "3"
                font_size: 30
                
                on_press: root.Button_value(3)
            Button:
                text: "+"
                on_press: root.signe("+")
                font_size: 30
                background_color: (54/255 , 173/255 , 176/255)
                ############## row 5##########
            Button:
                
                text: "+/-"
                font_size: 30
                on_press: root.Nsign()
                

            Button:
                text: "0"
                font_size: 30
                on_press: root.Button_value(0)
            Button:
                text: "."
                font_size: 30
                on_press: root.dot()
                
            Button:
                text: "="
                on_press: root.result()
                font_size: 30
                background_color: (54/255 , 173/255 , 176/255)